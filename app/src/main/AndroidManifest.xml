<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adhiwie.diary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />-->
    <!--<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />-->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.adhiwie.diary.questionnaire.diary.DiaryStudyQuestionnaireActivity" />
        <activity android:name="com.adhiwie.diary.questionnaire.diary.ReinforcementActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.adhiwie.diary.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.adhiwie.diary.ConsentActivity"
            android:label="@string/title_activity_consent"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.adhiwie.diary.user.permission.AccessibilityServicePermissionActivity"
            android:label="@string/title_activity_accessibility_permission" />
        <activity
            android:name="com.adhiwie.diary.user.permission.AppUsagePermissionActivity"
            android:label="@string/title_activity_app_usage_permission" />
        <activity
            android:name="com.adhiwie.diary.user.permission.NSLPermissionActivity"
            android:label="@string/title_activity_nsl_permission" />
        <activity
            android:name="com.adhiwie.diary.plan.PlanActivity"
            android:label="@string/title_activity_create_plan"
            android:parentActivityName="com.adhiwie.diary.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.adhiwie.diary.report.DiaryReportActivity"
            android:label="@string/title_activity_task_report"
            android:parentActivityName="com.adhiwie.diary.MainActivity" />
        <activity
            android:name="com.adhiwie.diary.questionnaire.goalcommitment.GCSActivity"
            android:label="@string/title_activity_gcs_test" />
        <activity
            android:name="com.adhiwie.diary.questionnaire.posttest.SRBAIActivity"
            android:label="@string/title_activity_srbai_test" />
        <activity android:name="com.adhiwie.diary.questionnaire.diary.ReminderActivity" />
        <activity
            android:name="com.adhiwie.diary.user.data.UserRegistrationActivity"
            android:label="Registration"
            android:windowSoftInputMode="adjustResize" />

        <service
            android:name="com.adhiwie.diary.sensor.push.AccessibilitySensor"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
        <service
            android:name="com.adhiwie.diary.sensor.push.ActivitySensor"
            android:exported="false"
            android:label="@string/app_name" />
        <service
            android:name="com.adhiwie.diary.sensor.push.LocationSensor"
            android:exported="false"
            android:label="@string/app_name" />
        <service
            android:name="com.adhiwie.diary.notification.NotificationMonitorService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <receiver android:name="com.adhiwie.diary.sensor.push.NetworkStateSensor">
            <intent-filter>
                <action android:name="WifiManager.NETWORK_STATE_CHANGED_ACTION" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adhiwie.diary.sensor.push.PowerConnectionSensor">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adhiwie.diary.sensor.push.RingerModeSensor">
            <intent-filter>
                <action android:name="android.media.RINGER_MODE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>