<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card"
    tools:ignore="missingPrefix">

    <android.support.v7.widget.CardView
        style="@style/CardViewStyle"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                style="@style/CardBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Little interest or pleasure in doing things"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:id="@+id/option1"
                    android:text="Not at all"
                    style="@style/CardBody"
                    fontPath="fonts/TTNorms-Regular.otf"/>

                <RadioButton
                    android:id="@+id/option2"
                    android:text="Several days"
                    style="@style/CardBody"
                    fontPath="fonts/TTNorms-Regular.otf"/>

                <RadioButton
                    android:id="@+id/option3"
                    android:text="More than half the days"
                    style="@style/CardBody"
                    fontPath="fonts/TTNorms-Regular.otf"/>

                <RadioButton
                    android:id="@+id/option4"
                    android:text="Nearly every day"
                    style="@style/CardBody"
                    fontPath="fonts/TTNorms-Regular.otf"/>
            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>